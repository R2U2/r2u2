PREDS
    Scheduled: pred;
    Exec: pred;

    max(Scheduled) = 3;

FTSPEC
    -- Each task in the scheduler shall execute within the next 4 seconds.
    R1: forall(t)(Scheduled(t) -> F[0,4] Exec(t));

