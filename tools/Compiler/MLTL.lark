//// Parser Rules

program: block*

block: var_block
     | def_block
     | spec_block
     | order_block

var_block: VAR_KW var_list
var_list: (IDENTIFIER ":" type ";")+ 

type: BASE_TYPE
    | SET_KW set_param

set_param: "<" BASE_TYPE ">"
         | "âŸ¨" BASE_TYPE "âŸ©"

def_block: DEF_KW def_list
def_list: (IDENTIFIER "=" expr ";")+

// set_list: "{" IDENTIFIER? "}"
//         | "{" IDENTIFIER ("," IDENTIFIER)+ "}"
//         | EMPTY_SET

spec_block: SPEC_KW spec_list
spec_list: (spec_label? expr ";")+
spec_label: IDENTIFIER ":"

order_block: ORDER_KW order_list
order_list: IDENTIFIER ("," IDENTIFIER)* ";"



expr: GLOBALLY interval expr     -> globally
    | FUTURE interval expr       -> future
    | expr UNTIL interval expr   -> until
    | expr RELEASE interval expr -> release
    | NOT expr
    | expr AND expr
    | expr OR expr
    | expr IMPLIES expr
    | expr IFF expr
    | IDENTIFIER
    | TRUE
    | FALSE

interval: "[" INT ("," INT)? "]"


